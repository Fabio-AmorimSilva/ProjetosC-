@model BibliotecaEntitiesLib.Books;

@{
    ViewData["Title"] = "Library More Books";

}

<form class="form" method="POST">
    <legend>Add Book</legend>
    <label>ISBN: </label>
        <input class="form-control" asp-for="ISBN" maxlength="9999999999" minlength="1" required/>
    <label>Title: </label>
        <input class="form-control" asp-for="Title" required>
    <label>Author: </label>
        <input class="form-control" asp-for="Author" required>
    <label>Genre: </label>
        <input class="form-control" asp-for="Genre" required>
    <label>Year: </label>
        <input class="form-control" asp-for="Year" maxlength="2021" minlength="1" required>
    <input class="btn btn-dark" type="submit">
</form>