@model ImobiliariaMvc.Models.DonoViewModel;

@{

    ViewData["Title"] = "Adiciona Dono";

}

<form class="form" method="POST">
    <legend>Dados do Dono</legend>
    <label>ID: </label>
        <input class="form-control" asp-for="Dono.id" placeholder="ID..." required/>
    <label>Nome: </label>
        <input class="form-control" asp-for="Dono.nome" placeholder="Nome..." required/>
    <label>Idade: </label>
        <input class="form-control" asp-for="Dono.idade" placeholder="Idade..." required/>
    <label>Imóvel: </label>
        <input class="form-control" asp-for="Dono.imovel" placeholder="Imóvel..." required/>
        <input class="btn btn-dark" type="submit" placeholder="Enviar" />
</form>