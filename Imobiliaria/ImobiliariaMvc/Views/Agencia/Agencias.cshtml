@model ImobiliariaMvc.Models.AgenciaViewModel;

@{

    ViewData["Title"] = "Lista de Agencias";

}

<h1>Lista de Agências</h1>

<a class="btn btn-dark"
   asp-controller="Home"
   asp-action="AddAgencia">
   Adiciona Agência via API
</a>

<a class="btn btn-dark"
   asp-controller="Home"
   asp-action="AlteraAgencia">
   Altera Agência via API
</a>

<a class="btn btn-dark"
   asp-controller="Home"
   asp-action="DeletaAgencia">
   Deleta Agência via API
</a>

<table class="table table-stripped table-bordered">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Cidade</th>
        <th>Id Corretores</th>
        <th>Id Imoveis</th>
    </thead>
    <tbody>
        @foreach (var agencia in Model.Agencias)
        {
            <tr>
                <td>@agencia.id</td>
                <td>@agencia.nome</td>
                <td>@agencia.idCorretores</td>
                <td>@agencia.idImoveis</td>              
            </tr>
        }
    </tbody>
</table>

